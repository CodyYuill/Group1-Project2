<div class="container my-5 py-5 z-depth-1">

  <!--Section: Content-->
  <section>
      <h2 class="h2-responsive text-center text-md-left product-name font-weight-bold red-text mb-1 ml-xl-0 ml-4 gametitle">{{ourData.name}}</h2>

    <div class="row">
      <div class="col-lg-6">
        <img id="gameImg" src={{theirData.background_image}} alt="Game image" class="img-fluid">
        
      </div>

      <div class="col-lg-5">
        <div class="font-weight-normal">          
          <span class="ml-xl-0 ml-4"></span>{{theirData.description_raw}}</p>
          <p class="ml-xl-0 ml-4 text-center">{{ourData.platforms}}</p>
          <p class="ml-xl-0 ml-4 text-center">{{ourData.genres}}</p>
          <p class="ml-xl-0 ml-4 text-center">ESRB Rating: {{theirData.esrb_rating.name}}</p>

          <p id="priceTag" class="text-center text-md-left red-text">$50</p>
          {{#ifCond ourData.inventory '>' 0}}
          <div  class="text-center">
            <p id="inventory">{{ourData.inventory}} Available</p>
            <button id="buyBtn" class="btn btn-secondary">Buy</button>  
          </div>
          {{else}} 
            Out of stock</p>
          {{/ifCond}}       

        </div>

      </div>
    </div>
  </section>
 
</div>

<div class="container my-5 py-5 z-depth-1">

  <!--Section: Content-->
  <section>
    <form class="input-group" id="reviewPost">
      <input id="reviewBody" data-gameid="{{ourData.id}}" type="text" class="form-control" placeholder="Leave a review...">
      <span class="input-group-btn">
        <input id="postBtn"  class="btn btn-secondary" type="submit"></input>
      </span>
    </form>
    {{#if ourData.Reviews}}
      <ul>
        {{#each ourData.Reviews}}
        <li class="reviewLi">
          <p class="ml-xl-0 ml-4">{{dataValues.User.dataValues.email}}</p>
          <p class="ml-xl-0 ml-4">{{dataValues.body}}</p>
          <p class="ml-xl-0 ml-4">{{dataValues.rating}}</p>
        </li>
        {{/each}}
      </ul>
    {{else}}
      <p class="ml-xl-0 ml-4">No reviews yet</p>
    {{/if}}
  </section>


</div>

